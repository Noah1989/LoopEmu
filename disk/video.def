; video I/O ports (relative to base address)
vscrx	equ	10h ; scroll x (lower byte)
vscry	equ	11h ; scroll y (lower byte)
vscrh	equ	12h ; scroll x/y high bits, modifiers
vadrl	equ	13h ; video address (lower byte)
vadrh	equ	14h ; video address (upper byte)
vname	equ	18h ; name table (select pattern for each tile)
vattr	equ	19h ; attribute table (select palette for each tile)
vpatt	equ	1ah ; pattern table (256 8x8 patterns, 32 bytes each)
vpale	equ	1bh ; palette table (512 palettes, 16 8-bit colors each)
vincr	equ	4   ; add this to I/O port no. for address auto increment

vclear	equ	0ch ; control code to clear screen (attribute in e)
vnewln	equ	0ah ; control code to clear line d (attribute in e)